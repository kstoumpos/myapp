<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="gr.myapp.app.OneFragment"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            >



            <ImageView
                android:id="@+id/imgArticle"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_not_available"
                android:layout_alignParentTop="true"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                >


                <TextView
                    android:id="@+id/titleArticle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@+id/imgArticle"
                    android:textSize="21sp"
                    android:layout_weight="4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/iconCatArticle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/titleArticle"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:src="@drawable/filter_sports"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textExcerpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/base"
                android:layout_below="@+id/imgArticle"
                android:textSize="17sp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>