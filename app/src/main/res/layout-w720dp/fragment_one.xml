<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gr.myapp.app.MainActivity"
    >


    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/coupon_filter_btns"
 />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/coupon_filter_btns"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#a7a7a7"
        android:weightSum="7"
        >


        <ImageView
            android:id="@+id/filter_greece"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/filter_white_greece"
            android:layout_weight="1"
            android:background="@drawable/white_border"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            /> 
        <ImageButton
            android:id="@+id/filter_world"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/filter_white_world"
            android:layout_weight="1"
            android:background="@drawable/white_border"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            /> 
        <ImageButton
            android:id="@+id/filter_sports"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/filter_white_sports"
            android:layout_weight="1"
            android:background="@drawable/white_border"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            /> 

        <ImageButton
            android:id="@+id/filter_economy"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/filter_white_economy"
            android:background="@drawable/white_border"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />

        <ImageButton
            android:id="@+id/filter_technology"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/filter_white_technology"
            android:layout_weight="1"
            android:background="@drawable/white_border"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />
        <ImageButton
            android:id="@+id/filter_woman"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/filter_white_woman"
            android:layout_weight="1"
            android:background="@drawable/white_border"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />

        <ImageButton
            android:id="@+id/filter_newspapers"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/filter_white_newspapers"
            android:layout_weight="1"
            android:background="#a7a7a7"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />



    </LinearLayout>


</RelativeLayout>